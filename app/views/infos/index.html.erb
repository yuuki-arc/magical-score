<h1>Listing infos</h1>
<%
=begin
<table class="" border="1">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @infos.each do |info| %>
      <tr>
        <td colspan="4"><%= info[:title] %></td>
      </tr>
      <% info[:mode].each do |mode| %>
        <tr>
          <td><%= mode %> <%= info[mode][:star] %></td>
          <td><img src="<%= info[mode][:detail][:image] %>" width="25" height="26" border="0"></td>
          <td><%= info[mode][:detail][:rate] %></td>
          <td><%= info[mode][:detail][:point] %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
=end
%>

<div>
  <% @infos.each do |info| %>
    <div class="page-header">
      <h3><%= info[:title] %></h3>
    </div>
    <div class="bs-example table-responsive">
      <table class="table table-striped table-hover ">
        <tbody>
          <% info[:mode].each do |mode| %>
            <tr class="<%= get_difficulty_color(mode) %>">
              <td>"<%= mode %>" <%= info[mode][:star] %></td>
              <td><img src="<%= info[mode][:detail][:image] %>" width="25" height="26" border="0"></td>
              <td><%= info[mode][:detail][:rate] %></td>
              <td><%= info[mode][:detail][:point] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
