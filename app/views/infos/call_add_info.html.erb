<% @infos.each do |info| %>
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th colspan="5"><%= info[:title] %></th>
      </tr>
    </thead>
    <tbody>
      <% info[:mode].each do |mode| %>
        <tr class="<%= get_difficulty_text(mode) %>">
          <td class="text-center" style="width:14%;"><span class="label <%= get_difficulty_label(mode) %>" style="width:27px;"><%= info[mode][:star] %></span></td>
          <td class="text-center" style="width:11%;"><img src="<%= info[mode][:detail][:image] %>" width="25" height="26" border="0"></td>
          <td class="text-right"  style="width:24%;"><%= info[mode][:detail][:rate] %></td>
          <td class="text-right"  style="width:21%;"><%= info[mode][:detail][:point] %></td>
          <td class="text-center" style="width:30%;"><%= info[mode][:detail][:trial] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
