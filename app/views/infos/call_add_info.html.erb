  <div class="panel panel-primary">
    <% @infos.each do |info| %>
      <div class="panel-heading"><%= info[:title] %></div>
      <table class="table table-striped table-hover table-condensed">
        <tbody>
          <% info[:mode].each do |mode| %>
            <tr class="<%= get_difficulty_text(mode) %>">
              <td style="width:15%;"><span class="label <%= get_difficulty_label(mode) %>"><%= info[mode][:star] %></span></td>
              <td style="width:10%;"><img src="<%= info[mode][:detail][:image] %>" width="25" height="26" border="0"></td>
              <td style="width:22%;"><%= info[mode][:detail][:rate] %></td>
              <td style="width:28%;"><%= info[mode][:detail][:point] %></td>
              <td style="width:25%;"><%= info[mode][:detail][:trial] %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
